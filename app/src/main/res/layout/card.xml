<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/kfclogo"
                        android:id="@+id/img_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dwalihi palace"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/img_logo"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/txt_compnyname"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="21dp"
                        android:background="@drawable/open_background"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txt_compnyname"
                        android:text="OPEN"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/txt_status"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_favorite_border_black_24dp"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_logo"
                        android:layout_below="@+id/txt_status"
                        android:id="@+id/txt_unicode_car"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_unicode_car"
                        android:layout_below="@+id/txt_status"
                        android:id="@+id/txt_unicode_card"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_unicode_card"
                        android:layout_below="@+id/txt_status"
                        android:id="@+id/txt_unicode_wifi"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_unicode_wifi"
                        android:layout_below="@+id/txt_status"
                        android:id="@+id/txt_unicode_music"
                        android:layout_margin="5dp"/>
                </RelativeLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>