<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="enzapps.com.hajath.RegisterActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/regcover"
                        android:scaleType="fitXY"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/box_edittext"
                                    android:layout_margin="10dp"
                                    android:hint="Name of company"
                                    android:paddingLeft="25dp"/>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/box_edittext"
                                    android:layout_margin="10dp"
                                    android:hint="No.of Branches"
                                    android:paddingLeft="25dp"/>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/box_edittext"
                                    android:layout_margin="10dp"
                                    android:hint="Contact No"
                                    android:paddingLeft="25dp"/>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/box_edittext"
                                    android:layout_margin="10dp"
                                    android:hint="Email"
                                    android:paddingLeft="25dp"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <android.support.v7.widget.AppCompatCheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="Restaurant"
                                            android:layout_weight="1"
                                            android:id="@+id/ch_restaurant"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="Bakery"
                                            android:layout_weight="1"
                                            android:layout_toRightOf="@id/ch_restaurant"
                                            android:id="@+id/ch_bakery"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="Pastry"
                                            android:layout_weight="1"
                                            android:layout_toRightOf="@id/ch_bakery"
                                            android:id="@+id/ch_pastry"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="Caterer"
                                            android:layout_below="@id/ch_restaurant"
                                            android:id="@+id/ch_caterer"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@id/ch_caterer"
                                            android:text="Others"
                                            android:layout_below="@id/ch_bakery"
                                            android:id="@+id/ch_other"/>
                                </RelativeLayout>
                                <Button
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="submit"
                                    android:gravity="center"
                                    android:textColor="#66BB6A"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rounded_button"/>
                        </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
</ScrollView>
